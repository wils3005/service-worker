    // OUTPUT FORMATTING ///////////////////////////////////////////////////////
    // "noErrorTruncation"
    // "preserveWatchOutput"
    // "pretty"
    // "skipDefaultLibCheck"
    "skipLibCheck": true

    // COMMAND LINE ////////////////////////////////////////////////////////////

    // WATCH OPTIONS ///////////////////////////////////////////////////////////
    // "assumeChangesOnlyAffectDirectDependencies"
    // "watchFile"
